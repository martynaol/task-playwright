{
  "name": "task-playwright",
  "version": "1.0.0",
  "description": "This repository contatins end-to-end tests for web application (https://skleptest.pl/). The tests are written in Playwright test framework and are designed to simulate user interactions with the application.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint '**/*{.ts,.js}' --ignore-pattern node_modules/ --fix",
    "test": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:smoke:chromium": "playwright test --grep @smoke --project=chromium",
    "test:ui:chromium": "playwright test  --ui --project=chromium"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-playwright": "^1.5.2",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "3.2.5",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
